    <title>Install App</title>


    <style>
    body {
font-family: "ProximaNovaLight", "Helvetica Neue", Helvetica, Arial, sans-serif;
background-color: #f2f7fa;
}

.login-container {
text-align: center;
margin-top: 100px;
padding: 20px;
}

.login-container article, .login-container aside, .login-container footer, .login-container header, .login-container hgroup, .login-container main, .login-container section {
display: block;
}
.login-container h1 {
font-weight: 300;
font-size: 40px;
margin-bottom: 10px;
}
.login-container h1 {
display: block;
-webkit-margin-before: 0.67em;
-webkit-margin-after: 0.67em;
-webkit-margin-start: 0px;
-webkit-margin-end: 0px;
}
.login-container .subhead {
font-size: 17px;
line-height: 32px;
font-weight: 300;
color: #969A9C;
}
.login-container p {
display: block;
-webkit-margin-before: 1em;
-webkit-margin-after: 1em;
-webkit-margin-start: 0px;
-webkit-margin-end: 0px;
}
.login-container label {
cursor: default;
}
.login-container .container__form {
width: 400px;
margin: auto;
}
.login-container form {
display: block;
margin-top: 0em;
}
.login-container input {
width: 300px;
height: 50px;
padding: 10px;
border: 1px solid #479CCf;
color: #575757;
background-color: #ffffff;
box-sizing: border-box;
border-radius: 4px 0 0 4px;
font-size: 18px;
float: left;
-webkit-rtl-ordering: logical;
user-select: text;
cursor: auto;
-webkit-appearance: textfield;
}
.login-container button {
-webkit-appearance: button;
}
.login-container button {
text-rendering: auto;
letter-spacing: normal;
word-spacing: normal;
text-transform: none;
text-indent: 0px;
display: inline-block;
margin: 0em;
font: 11px system-ui;
}
.login-container button {
color: #ffffff;
background-color: #3793cb;
width: 100px;
height: 50px;
padding: 10px 20px 10px 20px;
box-sizing: border-box;
border: none;
text-shadow: 0 1px 0 #3188bc;
font-size: 18px;
cursor: pointer;
border-radius: 0 4px 4px 0;
float: right;
}

    </style>
</head>
